<section
  class="row w-100 align-items-sm-center justify-content-center py-4 m-0 pattern"
  style="min-height: 100vh;"
>

  <div
    class="col-10 col-md-8 col-lg-6 p-0 py-4 px-4 px-md-5 border border-warning rounded text-white darkGrey-bg"
  >
    <form
      class="form d-flex flex-column gap-3"
      action="/login"
      id="form"
      method="post"
    >
      <h2>Login</h2>
      <div class="form-floating">
        <input
          class="form-control darkGrey-bg text-white"
          id="nickname"
          name="nickname"
          type="text"
          placeholder="nickname"
        />
        <label for="nickname">Nickname</label>
      </div>
      <div class="form-floating">
        <input
          class="form-control darkGrey-bg text-white"
          id="password"
          name="password"
          type="password"
          placeholder="senha"
        />
        <label for="inputPassword">Password</label>
      </div>
      <div class="row justify-content-center">
        <input
          type="submit"
          class="btn btn-warning btn-block px-5"
          style="max-width: 10rem;"
          value="Login"
        />
      </div>
      <div id="error" class="error text-light">
        <label>
          {{errors}}
        </label>
      </div>
      <div class="form-group">
        <p class="text-muted">
          Você não possui conta ?
          <a class="text-warning" href="/register-user">Criar conta</a><br />
          {{! Esqueceu sua senha ?
            <a class="text-warning" href="/forgot-password">Recuperar</a> }}
        </p>
      </div>
    </form>
  </div>
</section>

<script src="/javascripts/login.js"></script>