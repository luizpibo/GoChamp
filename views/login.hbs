<section class="row h-100 align-items-center justify-content-center px-3">
  <div class="col-lg-6 p-0">
    <div class="border border-warning py-4 px-5 rounded">
      <h2 class="text-white">Login</h2>
      <form action="/login" class="form" method="post">
        <div class="form-floating mb-3">
          <input
            class="form-control darkGrey-bg text-white"
            id="email"
            name="email"
            type="email"
            placeholder="exemplo@exemplo.com"
          />
          <label for="inputEmail">Email</label>
        </div>
        <div class="form-floating mb-3">
          <input
            class="form-control darkGrey-bg text-white"
            id="password"
            name="password"
            type="password"
            placeholder="senha"
          />
          <label for="inputPassword">Password</label>
        </div>
        <button
          type="submit"
          class="btn btn-warning btn-block my-3 px-5"
        >Login</button>
        <div class="row">
          <span class="errors">

          </span>
        </div>
        <div class="form-group">
          <p class="text-muted">
            Você não possui conta ?
            <a class="text-warning" href="/register-user">Criar conta</a><br />
            Esqueceu sua senha ?
            <a class="text-warning" href="/forgot-password">Recuperar</a>
          </p>
        </div>
      </form>
    </div>
  </div>
</section>

<script src="/javascripts/login.js"></script>