<section class="darkGrey-bg">
  <div class="container shadow-lg-warning">
    <div class="row h-100 align-items-center justify-content-center">
      <div class="col-lg-6">
        <div class="login-form border border-warning py-4 px-5 rounded">
          <h2 class="text-white">Register</h2>
          <form
            class="form"
            action="/register-team"
            id="form"
            name="form"
            method="POST"
          >

            <div class="form-floating mb-3">
              <input
                class="form-control darkGrey-bg text-white"
                id="name"
                name="name"
                type="text"
                placeholder="meu nome"
              />
              <label for="inputName">Name</label>
            </div>
            <div class="form-floating mb-3">
              <input
                class="form-control darkGrey-bg text-white"
                id="email"
                type="email"
                name="email"
                placeholder="exemplo@exemplo.com"
              />
              <label for="inputEmail">Email</label>
            </div>
            <div class="form-floating mb-3">
              <input
                class="form-control darkGrey-bg text-white"
                id="password"
                type="password"
                name="password"
                placeholder="degite uma senha"
              />
              <label for="inputPassword">Senha</label>
            </div>
            <div class="form-floating mb-3">
              <input
                class="form-control darkGrey-bg text-white"
                id="confirmPassword"
                type="password"
                name="confirmPassword"
                placeholder="confitme uma senha"
              />
              <label for="confirmPassword">Confirme a senha</label>
            </div>
            <div class="form-group">
              <label for="name">Foto de perfil</label>
              <input
                type="file"
                class="form-control"
                id="image"
                name="image"
                placeholder="Foto de perfil do time"
              />
            </div>
            <div id="error" class="error text-light">
              <label>
                {{errors}}
              </label>
            </div>
            <input
              type="submit"
              class="btn btn-warning btn-block my-3 px-5"
              value="Cadastrar"
            />
          </form>
          <div class="form-group">
            <p class="text-muted">
              VocÃª possui conta?
              <a class="text-warning" href="/login">Login</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="/javascripts/userRegister.js"></script>