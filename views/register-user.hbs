<section class="darkGrey-bg p-5">
    <div class="container shadow-lg-warning">
        <div class="row h-100 align-items-center justify-content-center">
            <div class="col-lg-6">
                <div class="login-form border border-warning py-4 px-5 rounded">
                    <h2 class="text-white">Register</h2>
                    <form action="/user-register" class="form" method="post">
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputName" type="text" placeholder="meu nome" />
                            <label for="inputName">Name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputEmail" type="email"
                                placeholder="exemplo@exemplo.com" />
                            <label for="inputEmail">Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputPassword" type="password"
                                placeholder="degite uma senha" />
                            <label for="inputPassword">Senha</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputConfirmPassword" type="password"
                                placeholder="confitme uma senha" />
                            <label for="inputConfirmPassword">Confirme a senha</label>
                        </div>
                        <button type="submit" class="btn btn-warning btn-block my-3 px-5">Register</button>
                        <div class="form-group">
                            <p class="text-muted">
                                VocÃª possui conta?
                                <a class="text-warning" href="/login">Login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>