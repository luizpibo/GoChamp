<section
  class="row w-100 align-items-sm-center justify-content-center py-4 m-0 pattern"
  style="min-height: 100vh;"
>

  <div
    class="col-10 col-md-8 col-lg-6 p-0 py-4 px-4 px-md-5 border border-warning rounded text-white darkGrey-bg"
  >
    <form
      class="form d-flex flex-column gap-3"
      action="/register-team"
      id="form"
      method="POST"
    >
      <h2>Cadastro de ususário</h2>
      <div>
        <span>No mínimo 4 letras, máximo 15 letras*</span>
        <div class="form-floating">
          <input
            class="form-control darkGrey-bg text-white"
            id="nickname"
            name="nickname"
            type="text"
            placeholder="nickname"
          />
          <label for="nickname">Nickname</label>
        </div>
      </div>
      <div class="form-floating">
        <input
          class="form-control darkGrey-bg text-white"
          id="email"
          type="email"
          name="email"
          placeholder="exemplo@exemplo.com"
        />
        <label for="inputEmail">Email</label>
      </div>
      <div class="form-floating">
        <input
          class="form-control darkGrey-bg text-white"
          id="password"
          type="password"
          name="password"
          placeholder="degite uma senha"
        />
        <label for="inputPassword">Senha</label>
      </div>
      <div class="form-floating">
        <input
          class="form-control darkGrey-bg text-white"
          id="confirmPassword"
          type="password"
          name="confirmPassword"
          placeholder="confitme uma senha"
        />
        <label for="confirmPassword">Confirme a senha</label>
      </div>
      <div class="text-white">
        <label for="image">Foto de perfil</label>
        <input
          class="form-control darkGrey-bg text-white"
          id="image"
          type="file"
          name="image"
          placeholder="Foto de perfil do time"
        />
      </div>
      <label id="errors" class="error text-light">
      </label>
      <div class="row justify-content-center">
        <input
          type="submit"
          class="btn btn-warning btn-block px-5"
          style="max-width: 10rem;"
          value="Cadastrar"
        />
      </div>
      <div class="form-group">
        <p class="text-muted">
          Você possui conta?
          <a class="text-warning" href="/login">Login</a>
        </p>
      </div>
    </form>
  </div>
</section>
<script src="/javascripts/userRegister.js"></script>