<div
  class="d-md-flex flex-md-row align-items-center text-white justify-content-center gap-4"
  style="min-height: 100vh"
>
  <form
    class="col-12 col-md-4 py-4"
    action="/register-team"
    id="form"
    class="form"
    method="POST"
  >
    <div class="form-group">
      <label for="name">Nome do time</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Nome do time"
      />
    </div>
    <div class="form-group">
      <div class="form-group my-3">
        <label for="games">Jogo</label>
        <select class="form-control" name="games" id="games" form="form">
          <option value="Counter-Strike: Global Offensive">Counter-Strike:Global
            Offensive</option>
          <option value="Rocket League">Rocket League</option>
          <option value="Street figth">Street figth</option>
          <option value="League of legends">League of legends</option>
        </select>
      </div>
    </div>
    <span id="error">

    </span>
    <input
      type="submit"
      class="btn btn-warning btn-block my-3 px-5"
      value="Cadastrar"
    />
  </form>
  <section class="col-12 col-md-7 py-4 h-100">
    <h2 class="text-center">Todos os Times</h2>
    <div class="w-100 bg-dark rounded overflow-scroll" style="height: 300px;">
      {{#each teams}}
        <div class="w-full">
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{game}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  </section>
</div>

<script src="javascripts/teamRegister.js"></script>