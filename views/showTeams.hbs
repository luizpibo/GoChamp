<div class="row col-12 m-0 gap-4 pattern h-100">
  <h1 class="text-center">Todos os times</h1>
  <div class="row justify-content-center">
    <form class="form d-flex gap-3 col-10 col-md-6">
      <input
        type="text"
        name="timeName"
        class="form-control darkGrey-bg text-white"
        placeholder="Pesquisar..."
      />
      <input type="submit" class="btn btn-warning" value="Pesquisar" />
    </form>
  </div>

  <div
    class="d-flex justify-content-center align-content-between flex-wrap gap-3"
  >

    {{#each teams}}
      <div class="col-8 col-md-3">
        <div class="card bg-dark border border-warning rounded p-3 h-100">
          <img
            class="card-img-top"
            src="/img/teams_img_profiles/{{image}}"
            alt="Card image cap"
          />
          <div class="card-body">
            <h6 class="card-title">{{name}}</h6>
            <p class="card-text">{{game}}</p>
            <a href="/teams/{{name}}" class="btn btn-warning">
              Ver mais
            </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>